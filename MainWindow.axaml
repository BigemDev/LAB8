<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CardGames.MainWindow"
        Title="CardGames">
    <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Spacing="10">
        <Button Content="Poker(Bigem)" Width="200" Click="StartGameBigem_Click"/>
        <Button Content="Balatro(Hoda):D" Width="200" Click="StartGameHoda_Click"/> 
        <Button Content="Wojna(Mati)" Width="200" Click="Startwojna_Click"/>
        <Button Content="Exit" Width="200" Click="Exit_Click"/>
        <Button Content="Game History" Width="200" Click="ShowGameHistory_Click"/>
    </StackPanel>
</Window>
