<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="1500" d:DesignHeight="900"
        x:Class="CardGames.poczekalnia"
        Title="poczekalnia">
        <Grid Background="DarkSeaGreen">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="3*"/> 
                <ColumnDefinition Width="3*"/> 
                <ColumnDefinition Width="3*"/> 
                <ColumnDefinition Width="5*"/> 
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                    <RowDefinition Height="5*"/> 
                    <RowDefinition Height="3*"/> 
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="5*"/> 
                    <RowDefinition Height="3*"/>
                    <RowDefinition Height="5*"/>
            </Grid.RowDefinitions>
            <TextBlock Grid.Column="1" Grid.Row="1"
                       HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">Punkty gracza nr. 1: </TextBlock>
            <TextBox Grid.Column="2" Grid.Row="1"
                     HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="gracz_1" Margin="5"></TextBox>
            <TextBlock Grid.Column="1" Grid.Row="2"
                       HorizontalAlignment="Center" VerticalAlignment="Center" Margin="5">Punkty gracza nr. 2: </TextBlock>
            <TextBox Grid.Column="2" Grid.Row="2" 
                     HorizontalAlignment="Center" VerticalAlignment="Center" x:Name="gracz_2" Margin="5"></TextBox>
            <Button Grid.Column="1" Grid.Row="4" Height="100" Width="240" Content="START"
                    HorizontalAlignment="Center" 
                    Click="start"></Button>
            <Button Grid.Column="2" Grid.Row="4" Height="100" Width="240" Content="WYJDÅ¹"
                    HorizontalAlignment="Center"
            ></Button>
    </Grid>
</Window>